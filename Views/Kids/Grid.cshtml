
@{
    ViewData["Title"] = "Grid";
}

@(Html.DevExtreme().DataGrid<OliveKids.Models.Kid>()
.ShowBorders(true)
.Export(e => e.Enabled(true).FileName("OliveKids").AllowExportSelectedData(true))
.Selection(s => s.Mode(SelectionMode.Multiple))
.DataSource(d => d.Mvc().Controller("Kids").LoadAction("GetAll").Key("Id"))
.Columns(columns =>
{
columns.AddFor(m => m.Id);
columns.AddFor(m => m.Name)
         .CellTemplate(@<text>
        <div class="img" style="background-image: url(<%=data.GridPhoto%>)" />
        <span class="name"><%=data.Name%></span>
        </text>);
columns.AddFor(m => m.ArabicName);
columns.AddFor(m => m.Age);
columns.AddFor(m => m.Gender);

})
.Paging(p => p.PageSize(10))
.FilterRow(f => f.Visible(true))
.HeaderFilter(f => f.Visible(true))
.GroupPanel(p => p.Visible(true))
.Grouping(g => g.AutoExpandAll(false))
.RemoteOperations(true)
)


